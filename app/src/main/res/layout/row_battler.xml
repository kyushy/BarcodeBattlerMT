<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
     android:background="@drawable/row_battlershape">

    <TextView
        android:id="@+id/id_battler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="ID"
        android:textColor="@color/White"
        android:textSize="25sp" />


    <ImageView
        android:id="@+id/hp_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/id_battler"
        android:layout_marginStart="70dp"
        android:src="@drawable/hp_icon" />

    <TextView
        android:id="@+id/hp_battler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/hp_icon"
        android:layout_marginStart="10dp"
        android:text="HP"
        android:textColor="@color/White"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/atk_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/hp_icon"
        android:layout_below="@+id/hp_battler"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/atk_icon" />

    <TextView
        android:id="@+id/atk_battler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/hp_battler"
        android:layout_below="@id/hp_battler"
        android:layout_marginTop="13dp"
        android:text="ATK"
        android:textColor="@color/White"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/def_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/atk_icon"
        android:layout_marginStart="100dp"
        android:layout_toEndOf="@+id/atk_icon"
        android:src="@drawable/def_icon" />

    <TextView
        android:id="@+id/def_battler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/def_icon"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/def_icon"
        android:text="DEF"
        android:textColor="@color/White"
        android:textSize="25sp" />

</RelativeLayout>