<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
     android:background="@drawable/row_battlershape">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/atk_battler"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/hp_icon"
        app:srcCompat="@drawable/sprite_1" />

    <ImageView
        android:id="@+id/hp_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/hp_battler"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imageView3"
        android:src="@drawable/hp_icon" />

    <TextView
        android:id="@+id/hp_battler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/hp_icon"
        android:layout_marginStart="10dp"
        android:text="HP"
        android:textColor="@color/White"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lvl_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/atk_battler"
        android:layout_alignStart="@+id/def_icon"
        android:text="LVL"
        android:textColor="@color/White"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lvl_battler_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lvl_row"
        android:layout_alignBottom="@+id/lvl_row"
        android:layout_alignStart="@+id/def_battler"
        android:text="LVL"
        android:textColor="@color/White"
        android:textSize="25sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/atk_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/hp_icon"
        android:layout_below="@+id/hp_battler"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/atk_icon" />

    <TextView
        android:id="@+id/atk_battler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/hp_battler"
        android:layout_below="@id/hp_battler"
        android:layout_marginTop="13dp"
        android:text="ATK"
        android:textColor="@color/White"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/def_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/atk_icon"
        android:layout_marginStart="100dp"
        android:layout_toEndOf="@+id/atk_icon"
        android:src="@drawable/def_icon" />

    <TextView
        android:id="@+id/def_battler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/def_icon"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/lvl_row"
        android:text="DEF"
        android:textColor="@color/White"
        android:textSize="25sp" />

</RelativeLayout>