<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mbds.barcodebattlermt.fragments.ChoiceFightFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/localfight_btn"

            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/localfight"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/localfight_btn"
            android:layout_below="@+id/localfight_btn"
            android:layout_marginEnd="47dp"
            android:text="LOCAL"
            android:textColor="@color/White"
            android:textSize="25sp" />

        <Button
            android:id="@+id/reseaufight_btn"

            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"

            android:background="@drawable/reseaufight"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/reseaufight_btn"
            android:layout_below="@+id/reseaufight_btn"
            android:layout_marginEnd="40dp"
            android:text="RESEAU"
            android:textColor="@color/White"
            android:textSize="25sp" />

    </RelativeLayout>

</FrameLayout>
